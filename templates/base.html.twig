                        <li class="breadcrumb-item active" aria-current="page">Contact Us</li>
                    {% elseif app.request.attributes.get('_route') == 'app_admin' %}
                        <li class="breadcrumb-item active" aria-current="page">Admin</li>
                    {% elseif app.request.attributes.get('_route') == 'app_admin_inventory' %}
                        <li class="breadcrumb-item"><a href="{{ path('app_admin') }}">Admin</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Inventory</li>
                    {% elseif app.request.attributes.get('_route') == 'app_admin_car' %}
                        <li class="breadcrumb-item"><a href="{{ path('app_admin') }}">Admin</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('app_admin_inventory') }}">Inventory</a></li>
