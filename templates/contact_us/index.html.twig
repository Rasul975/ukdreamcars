{# templates/contact/contact.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Contact Us{% endblock %}

{% block metaData %}
    <meta name="description" content="Get in touch with UK Dream Cars. Contact us for inquiries, car sales, customer service, or visit our dealership in Manchester. We're here to help!">
    <meta name="author" content="UK Dream Cars">
    <meta property="og:title" content="Contact Us | UK Dream Cars">
    <meta property="og:description" content="Reach out to UK Dream Cars for any questions or assistance regarding our car sales and services. We're located in Manchester, ready to help you find your dream car.">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://www.ukdreamcars.co.uk/contact">
    <meta name="robots" content="index, follow">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Contact Us</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        {{ form_start(contactForm) }}
        {{ form_errors(contactForm) }}

        <div class="form-group">
            {{ form_label(contactForm.name) }}
            {{ form_widget(contactForm.name) }}
        </div>
        <div class="form-group">
            {{ form_label(contactForm.email) }}
            {{ form_widget(contactForm.email) }}
        </div>
        <div class="form-group">
            {{ form_label(contactForm.message) }}
            {{ form_widget(contactForm.message) }}
        </div>

        <div class="form-group">
            <input type="submit" value="Send" class="btn btn-primary py-3 px-5">
        </div>


        {{ form_end(contactForm) }}
    </div>
{% endblock %}
