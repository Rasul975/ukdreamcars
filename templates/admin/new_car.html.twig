{# templates/admin/new_car.html.twig #}

{% extends 'admin/index.html.twig' %}

{% block title %}Add New Car{% endblock %}

{% block customPageStylesheet %}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block pageJavascripts %}
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
{% endblock %}

{% block dashboard_content %}
    <div class="container mt-5">
        <h1>Add New Car</h1>
        {{ form_start(carForm, {'attr': {'enctype': 'multipart/form-data'}}) }}

        {{ form_errors(carForm) }}

        <div class="form-group">
            {{ form_label(carForm.registration) }}
            {{ form_widget(carForm.registration, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(carForm.model) }}
            {{ form_widget(carForm.model, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(carForm.mileage) }}
            {{ form_widget(carForm.mileage, {'attr': {'class': 'form-control', 'type': 'number'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(carForm.doors) }}
            {{ form_widget(carForm.doors, {'attr': {'class': 'form-control', 'type': 'number'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(carForm.horsepower) }}
            {{ form_widget(carForm.horsepower, {'attr': {'class': 'form-control', 'type': 'number'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(carForm.hpi) }}
            {{ form_widget(carForm.hpi, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(carForm.transmission) }}
            {{ form_widget(carForm.transmission, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(carForm.price) }}
            {{ form_widget(carForm.price, {'attr': {'class': 'form-control', 'type': 'number'}}) }}
        </div>

        <button type="submit" class="btn btn-primary mt-3">Save Car</button>
        {{ form_end(carForm) }}
    </div>
{% endblock %}
